---
import Card from '@/components/retrowave/card.astro'
import Layout from '@/layouts/retrowave-layout.astro'
import { Image } from 'astro:assets'
import profileImage from '@/assets/retrowave-profile-image.jpg'
import SchoolFilled from '@/assets/school-filled.svg'
import FavoriteFilled from '@/assets/favorite-filled.svg'
import Title from '@/components/retrowave/title.astro'
import astroStamp from '@/assets/retrowave-astro-stamp.svg'
import figmaStamp from '@/assets/retrowave-figma-stamp.svg'
import litStamp from '@/assets/retrowave-lit-stamp.svg'
import nodejsStamp from '@/assets/retrowave-nodejs-stamp.svg'
import reactStamp from '@/assets/retrowave-react-stamp.svg'
import tailwindStamp from '@/assets/retrowave-tailwind-stamp.svg'
import typescriptStamp from '@/assets/retrowave-typescript-stamp.svg'
import vscodeStamp from '@/assets/retrowave-vscode-stamp.svg'
import Particles from '@/components/Particles'
---

<Layout>
  <Particles />
  <main class="flex flex-1 flex-col gap-9">
    <Title text="About me" />
    <div class="flex flex-col gap-6 md:flex-row">
      <Card class="md:max-w-2xs lg:max-w-md">
        <div class="relative -mx-6 -mt-6">
          <Image
            src={profileImage}
            alt="Profile image of Koen Vercauteren"
            class="rounded-lg bg-[rgba(0,0,255,.4)]"
          />
          <h2
            class="absolute right-3 bottom-3 font-family-tertiary text-white uppercase"
          >
            <span>front-end</span>
            <br />
            <span>developer</span>
          </h2>
        </div>
        <p class="text-lg text-[rgba(255,255,255,.8)]">
          I believe great interfaces start with
          <b> empathy for the user</b>. That philosophy guides every decision I
          make, from layout and interaction to performance and accessibility.
        </p>
      </Card>
      <div class="flex flex-1 flex-col gap-6">
        <Card class="flex-1">
          <div class="flex items-center gap-3">
            <SchoolFilled fill="white" />
            <h2 class="text-md font-family-tertiary text-white">Education</h2>
          </div>
          <span class="text-xl font-medium text-white">
            Bachelor in Applied Computer Science, Application Development
          </span>
          <p class="text-lg text-[rgba(255,255,255,.8)]">
            A <b>hands-on</b> educational track centered around analyzing, designing
            and building modern software applications. It emphasized
            <b> practical experience </b>with programming, databases and
            user-centered design, providing a solid foundation in both front-end
            and back-end development.
          </p>
        </Card>
        <Card>
          <div class="flex items-center gap-3">
            <FavoriteFilled fill="white" />
            <h2 class="text-md font-family-tertiary text-white">Interests</h2>
          </div>
          <div class="flex flex-wrap gap-2">
            <div class="pill rounded-full px-3 py-1.5">
              <span class="font-semibold text-white">Video games</span>
            </div>
            <div class="pill rounded-full px-3 py-1.5">
              <span class="font-semibold text-white">Calisthenics</span>
            </div>
            <div class="pill rounded-full px-3 py-1.5">
              <span class="font-semibold text-white">Weight training</span>
            </div>
            <div class="pill rounded-full px-3 py-1.5">
              <span class="font-semibold text-white">Music</span>
            </div>
          </div>
        </Card>
      </div>
    </div>
    <Title text="Technologies & tools" variant="h2" />
    <div class="grid grid-cols-2 gap-6 md:grid-cols-4">
      <Card class="!p-0.5">
        <Image src={reactStamp} alt="React" />
      </Card>
      <Card class="!p-0.5">
        <Image src={typescriptStamp} alt="TypeScript" />
      </Card>
      <Card class="!p-0.5">
        <Image src={tailwindStamp} alt="Tailwind" />
      </Card>
      <Card class="!p-0.5">
        <Image src={astroStamp} alt="Astro" />
      </Card>
      <Card class="!p-0.5">
        <Image src={litStamp} alt="Lit" />
      </Card>
      <Card class="!p-0.5">
        <Image src={nodejsStamp} alt="NodeJS" />
      </Card>
      <Card class="!p-0.5">
        <Image src={vscodeStamp} alt="Visual Studio Code" />
      </Card>
      <Card class="!p-0.5">
        <Image src={figmaStamp} alt="Figma" />
      </Card>
    </div>
    <Title text="Music I vibe to" variant="h2" />
    <div
      class="relative after:absolute after:inset-0 after:rounded-lg after:bg-black after:content-['']"
    >
      <iframe
        title="Spotify playlist"
        class="relative z-10 rounded-xl"
        src="https://open.spotify.com/embed/playlist/5iurwNbNFeFqJ9uCH3Witt?utm_source=generator"
        width="100%"
        height="425"
        allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
        loading="lazy"></iframe>
    </div>
  </main>
</Layout>

<style lang="scss">
  b {
    color: white;
  }

  .pill {
    background: rgba(0, 0, 255, 0.4);
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    border: 1px solid rgba(0, 0, 255, 0.7);
  }
</style>
