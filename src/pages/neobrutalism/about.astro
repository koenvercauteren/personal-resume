---
import Layout from '@/layouts/neobrutalism-layout.astro'
import Decoration2 from '@/assets/decoration-2.svg'
import SchoolFilled from '@/assets/school-filled.svg'
import FavoriteFilled from '@/assets/favorite-filled.svg'
import { Image } from 'astro:assets'
import profileImage from '@/assets/profile-image.jpg'
import astroStamp from '@/assets/astro-stamp.svg'
import figmaStamp from '@/assets/figma-stamp.svg'
import litStamp from '@/assets/lit-stamp.svg'
import nodejsStamp from '@/assets/nodejs-stamp.svg'
import reactStamp from '@/assets/react-stamp.svg'
import tailwindStamp from '@/assets/tailwind-stamp.svg'
import typescriptStamp from '@/assets/typescript-stamp.svg'
import vscodeStamp from '@/assets/vscode-stamp.svg'
import Button from '@/components/neobrutalism/button.astro'
import Card from '@/components/neobrutalism/card.astro'
import NeoWrapper from '@/components/neobrutalism/neo-wrapper.astro'
---

<Layout>
  <main class="flex flex-1 flex-col gap-9">
    <div class="flex gap-3">
      <h1 class="font-family-heading text-5xl font-black sm:text-6xl">
        About me
      </h1>
      <Image
        src="https://fonts.gstatic.com/s/e/notoemoji/latest/2764_fe0f/512.gif"
        aria-hidden="true"
        alt=""
        width="96"
        height="96"
        class="size-[48px] sm:size-[60px]"
      />
    </div>
    <div class="flex flex-col gap-6 md:flex-row">
      <Card class="md:max-w-xs lg:max-w-sm">
        <div class="relative w-full">
          <div
            class="relative w-[84%] after:absolute after:inset-0 after:rounded-lg after:bg-black after:content-['']"
          >
            <Image
              src={profileImage}
              alt="Profile image of Koen Vercauteren"
              class="relative z-10 rounded-lg"
            />
          </div>
          <Decoration2 class="absolute top-[14%] right-0 z-10 w-[34%]" />
        </div>
        <h2
          class="z-10 -mt-14 text-4xl font-black text-white uppercase lg:-mt-16 lg:text-5xl"
        >
          front-end
          <br />
          <span class="text-black">developer</span>
        </h2>
        <p class="text-lg">
          I believe great interfaces start with
          <b> empathy for the user</b>. That philosophy guides every decision I
          make, from layout and interaction to performance and accessibility.
        </p>
        <Button
          href="https://www.linkedin.com/in/koen-vercauteren"
          variant="secondary"
        >
          let's connect
        </Button>
      </Card>
      <div class="flex flex-1 flex-col gap-6">
        <Card class="flex-1">
          <div class="flex items-center gap-3">
            <NeoWrapper>
              <SchoolFilled />
            </NeoWrapper>
            <h2 class="text-xl font-bold">Education</h2>
          </div>
          <span class="text-xl font-bold">
            Bachelor in Applied Computer Science, Application Development
          </span>
          <p class="text-lg">
            A <b>hands-on</b> educational track centered around analyzing, designing
            and building modern software applications. It emphasized
            <b> practical experience </b>with programming, databases and
            user-centered design, providing a solid foundation in both front-end
            and back-end development.
          </p>
        </Card>
        <Card class="flex-1">
          <div class="flex items-center gap-3">
            <NeoWrapper>
              <FavoriteFilled />
            </NeoWrapper>
            <h2 class="text-xl font-bold">Interests</h2>
          </div>
          <div class="flex flex-wrap gap-2">
            <NeoWrapper variant="background" wide>
              <span class="font-semibold">Video games</span>
            </NeoWrapper>
            <NeoWrapper variant="background" wide>
              <span class="font-semibold">Calisthenics</span>
            </NeoWrapper>
            <NeoWrapper variant="background" wide>
              <span class="font-semibold">Weight training</span>
            </NeoWrapper>
            <NeoWrapper variant="background" wide>
              <span class="font-semibold">Music</span>
            </NeoWrapper>
          </div>
        </Card>
      </div>
    </div>
    <h2 class="font-family-heading text-4xl font-black">
      Technologies & tools
    </h2>
    <div class="grid grid-cols-2 gap-6 md:grid-cols-4">
      <div
        class="relative after:absolute after:inset-3 after:rounded-lg after:bg-black after:content-['']"
      >
        <Image class="relative z-10 w-full" src={reactStamp} alt="React" />
      </div>
      <div
        class="relative after:absolute after:inset-3 after:rounded-lg after:bg-black after:content-['']"
      >
        <Image
          class="relative z-10 w-full"
          src={typescriptStamp}
          alt="TypeScript"
        />
      </div>
      <div
        class="relative after:absolute after:inset-3 after:rounded-lg after:bg-black after:content-['']"
      >
        <Image
          class="relative z-10 w-full"
          src={tailwindStamp}
          alt="Tailwind"
        />
      </div>
      <div
        class="relative after:absolute after:inset-3 after:rounded-lg after:bg-black after:content-['']"
      >
        <Image class="relative z-10 w-full" src={astroStamp} alt="Astro" />
      </div>
      <div
        class="relative after:absolute after:inset-3 after:rounded-lg after:bg-black after:content-['']"
      >
        <Image class="relative z-10 w-full" src={litStamp} alt="Lit" />
      </div>
      <div
        class="relative after:absolute after:inset-3 after:rounded-lg after:bg-black after:content-['']"
      >
        <Image class="relative z-10 w-full" src={nodejsStamp} alt="NodeJS" />
      </div>
      <div
        class="relative after:absolute after:inset-3 after:rounded-lg after:bg-black after:content-['']"
      >
        <Image
          class="relative z-10 w-full"
          src={vscodeStamp}
          alt="Visual Studio Code"
        />
      </div>
      <div
        class="relative after:absolute after:inset-3 after:rounded-lg after:bg-black after:content-['']"
      >
        <Image class="relative z-10 w-full" src={figmaStamp} alt="Figma" />
      </div>
    </div>
    <h2 class="font-family-heading text-4xl font-black">Music I vibe to</h2>
    <div
      class="relative after:absolute after:inset-0 after:rounded-lg after:bg-black after:content-['']"
    >
      <iframe
        title="Spotify playlist"
        class="relative z-10 rounded-xl"
        src="https://open.spotify.com/embed/playlist/5iurwNbNFeFqJ9uCH3Witt?utm_source=generator&theme=0"
        width="100%"
        height="425"
        allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
        loading="lazy"></iframe>
    </div>
  </main>
</Layout>
