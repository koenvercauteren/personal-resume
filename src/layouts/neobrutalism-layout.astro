---
import '@/styles/global.css'
import Navigation from '@/components/neobrutalism/navigation.astro'
import ThemeToggle from '@/components/neobrutalism/theme-toggle.astro'
import Head from '@/components/shared/head.astro'

const url = Astro.url
---

<!doctype html>
<html lang="en">
  <head>
    <link rel="icon" type="image/svg+xml" href="/favicon-neobrutalism.svg" />

    <Head />

    <link
      href="https://fonts.googleapis.com/css2?family=Bricolage+Grotesque:opsz,wght@12..96,200..800&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Lexend+Mega:wght@100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-background">
    <div class="relative m-auto flex min-h-dvh max-w-5xl p-6 pb-25">
      <div class="absolute top-6 right-6 z-10">
        <ThemeToggle />
      </div>
      <slot />
    </div>
    <div class="fixed bottom-3 z-50 flex w-full justify-center">
      <Navigation {url} />
    </div>
  </body>
</html>

<style>
  body {
    background-image: radial-gradient(rgba(0, 0, 0, 0.5) 1px, transparent 0);
    background-size: 40px 40px;
  }
</style>
