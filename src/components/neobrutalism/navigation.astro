---
import HomeFilled from '@/assets/home-filled.svg'
import Home from '@/assets/home.svg'
import PersonFilled from '@/assets/person-filled.svg'
import Person from '@/assets/person.svg'
import ArticleFilled from '@/assets/view-timeline-filled.svg'
import Article from '@/assets/view-timeline.svg'
import NavigationItem from './navigation-item.astro'

type Props = {
  url: URL
  prefix?: string
}

const { url, prefix = 'neobrutalism' } = Astro.props
const isAbout = url.pathname.includes('about')
const isExperience = url.pathname.includes('experience')
const isHome = !isAbout && !isExperience
---

<nav>
  <ul
    class="flex gap-6 rounded-full border-2 border-black bg-background px-6 py-3 shadow-[2px_2px_0px_rgb(0,0,0)]"
  >
    <NavigationItem isActive={isHome} href={`/${prefix}`}>
      <HomeFilled aria-hidden="true" class="group-hover:hidden" />
      <Home aria-hidden="true" class="hidden group-hover:block" />
      Home
    </NavigationItem>
    <NavigationItem isActive={isAbout} href={`/${prefix}/about`}>
      <PersonFilled aria-hidden="true" class="group-hover:hidden" />
      <Person aria-hidden="true" class="hidden group-hover:block" />
      About
    </NavigationItem>
    <NavigationItem isActive={isExperience} href={`/${prefix}/experience`}>
      <ArticleFilled aria-hidden="true" class="group-hover:hidden" />
      <Article aria-hidden="true" class="hidden group-hover:block" />
      Experience
    </NavigationItem>
  </ul>
</nav>
